<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="communication" namespace="/websocket/communication" extends="json-default">

		<action name="ajaxPolling" class="communicationAction" method="ajaxPolling">
			<result type="json">
				<param name="root">pollingDataWrapper</param>
			</result>
		</action>

		<action name="ajaxLongPolling" class="communicationAction" method="ajaxLongPolling">
			<result type="json">
				<param name="root">pollingDataWrapper</param>
			</result>
		</action>

		<action name="iFramePolling" class="communicationAction" method="iFramePolling">
			<result type="json">
				<param name="root">pollingDataWrapper</param>
			</result>
		</action>

		<action name="iFrameLongPolling" class="communicationAction" method="iFrameLongPolling">
			<result type="json">
				<param name="root">pollingDataWrapper</param>
			</result>
		</action>

	</package>

</struts>