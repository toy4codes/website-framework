<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd//hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.toy4codes.website.framework.beans.WiresharkPacket" table="wireshark_packet">
		<id name="id" type="int">
			<column name="id" />
			<generator class="native" />
		</id>
		<property name="time" type="com.toy4codes.website.framework.hibernate.type.converter.DateTimeStringConverter">
			<column name="time" />
		</property>
		<property name="source" type="java.lang.String">
			<column name="source" />
		</property>
		<property name="destination" type="java.lang.String">
			<column name="destination" />
		</property>
		<property name="protocol" type="java.lang.String">
			<column name="protocol" />
		</property>
		<property name="length" type="int">
			<column name="length" />
		</property>
		<property name="info" type="java.lang.String">
			<column name="info" />
		</property>
	</class>

	<query name="findAllProtocols">select protocol from WiresharkPacket group by protocol</query>
	
	<query name="findAllProtocolsAndCounts">select protocol, count(protocol) from WiresharkPacket group by protocol</query>

</hibernate-mapping>
